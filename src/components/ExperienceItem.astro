---
export interface Props {
    title: string
    description: string
    link?: string
    date: string,
    latest: boolean
}

const { title, description, link, date, latest } = Astro.props
---

<span class="experience-icon">
    <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
    </svg>
</span>
<h3 class="experience-title"> {title}
    {
        latest &&
        (
            <span class="experience-latest">Latest</span>
        )
    }
</h3>
<time class="experience-date">{date}</time>
<p class="experience-desc">{description}</p>
{link &&
    (
        <a href={link} class="experience-link">
            <svg class="w-3.5 h-3.5 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"></svg>
        </a>
    )
}
